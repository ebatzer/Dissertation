file = {:C$\backslash$:/Users/ebatz/Documents/Mendeley Desktop/Kreyling, Jentsch, Beierkuhnlein - 2011 - Stochastic trajectories of succession initiated by extreme climatic events - Ecology Letters.pdf:pdf},
issn = {1461023X},
journal = {Ecology Letters},
keywords = {BIODEPTH,Climate change,Compositional legacy,Drought,Ecological memory,Temperate grassland},
number = {8},
pages = {758--764},
title = {{Stochastic trajectories of succession initiated by extreme climatic events}},
volume = {14},
year = {2011}
}
