file = {:C$\backslash$:/Users/ebatz/Documents/Mendeley Desktop/Borer et al. - 2014 - Multiple nutrients and herbivores interact to govern diversity, productivity, composition, and infection in a succ.pdf:pdf},
isbn = {1600-0706},
issn = {00301299},
journal = {Oikos},
