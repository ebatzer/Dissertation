keywords = {Biodiversity,Coexistence mechanism,Functional trait,Population dynamics,Specific leaf area},
number = {28},
pages = {11641--11645},
pmid = {19571002},
title = {{Functional tradeoffs determine species coexistence via the storage effect}},
volume = {106},
year = {2009}
}
