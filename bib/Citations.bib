doi = {10.1111/2041-210X.12125},
file = {:C$\backslash$:/Users/ebatz/Documents/Mendeley Desktop/Borer et al. - 2014 - Finding generality in ecology A model for globally distributed experiments - Methods in Ecology and Evolution.pdf:pdf},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Collaborative experimental network,Distributed experiment,Meta-analysis,Metadata,Nutrient Network,Relational data base},
number = {1},
pages = {65--73},
title = {{Finding generality in ecology: A model for globally distributed experiments}},
volume = {5},
year = {2014}
}
@article{Borer2014c,
